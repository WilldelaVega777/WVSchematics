{
    "$schema": "http://json-schema.org/schema",
    "id": "WVServiceSchematic",
    "title": "ng g wv-Service options schema",
    "type": "object",
    "description": "Create a new WVService",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the service to be created",
            "x-prompt": "Name:",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "path": {
            "type": "string",
            "description": "The path of the service to be created",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
              "$source": "projectName"
            }
        }       
    }
}