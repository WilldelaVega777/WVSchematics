{
    "$schema": "http://json-schema.org/schema",
    "id": "WVRouteSchematic",
    "title": "ng g wv-Route options schema",
    "type": "object",
    "description": "Create a new WVRoute",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the routing module to be created",
            "x-prompt": "Name:",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "path": {
            "type": "string",
            "description": "The path of the routing module to be created",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "project": {
            "type": "string",
            "description": "The project of the routing module.",
            "$default": {
              "$source": "projectName"
            }
        }        
    }
}